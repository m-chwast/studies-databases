<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AirlineManager.ViewModel"
			 mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="50"
             x:DataType="vm:AircraftViewModel"
			 x:Class="AirlineManager.View.AircraftView">

	<DockPanel LastChildFill="False" Margin="10">
	
    	<TextBlock Text="Fleet: " DockPanel.Dock="Top"/>
        
        <DataGrid ItemsSource="{Binding Aircraft}"
            Margin="0,10"
            BorderThickness="1"
            BorderBrush="Gray"
            GridLinesVisibility="All"
            IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsVisible="True"/>
                <DataGridTextColumn Header="Type Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Type Count" Binding="{Binding Count}" IsVisible="True"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>

</UserControl>